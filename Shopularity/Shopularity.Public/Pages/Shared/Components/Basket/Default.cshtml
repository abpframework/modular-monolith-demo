@using Microsoft.Extensions.Localization
@using Shopularity.Localization
@using Shopularity.Public.Components.Basket
@using Shopularity.Public.Pages.Shared.Components.Basket.BasketItem
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Grid
@using Volo.Abp.AspNetCore.Mvc.UI.Bundling.TagHelpers
@inject IStringLocalizer<ShopularityResource> L
@model Shopularity.Public.Components.Basket.BasketViewModel

<div class="border-bottom p-3 py-2 d-flex justify-content-between align-items-center">
    <span class="fw-semibold">@L["Basket"]</span>
    <span class="fw-light small" id="shopularityBasketItemCountLabel">@L["ProductWithCount{0}", Model.Items.Count]</span>
</div>

<div class="d-flex flex-column" id="shopularityBasketList" style="max-height: 520px; overflow-y:auto;">
    @foreach (var item in Model.Items)
    {
        <div class="p-2">
        @await Component.InvokeAsync(typeof(BasketItemViewComponent), new
        {
            model = new BasketItemViewModel(item)
        })
        </div>
    }
</div>

<div id="shopularityBasketEmpty" class="px-3 py-4 text-center text-muted @(Model.Items.Count > 0 ? "d-none" : "")">
    <i class="fa-solid fa-heart-crack fs-4 mb-2"></i><br/>
    @L["BasketEmpty"]
</div>

<div class="border-top p-3 @(Model.Items.Count == 0 ? "d-none" : "")" id="shopularityBasketSunOnActions">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <span class="fw-light">@L["TotalPrice"]</span>
        <span class="fw-semibold" id="shopularityBasketTotal">$@Model.TotalPrice.ToString("F2")</span>
    </div>
    <div>
        <a href="/check-out" class="btn btn-lg btn-primary">@L["ProceedToCheckOut"]</a>
    </div>
</div>