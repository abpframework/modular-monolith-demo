@using Microsoft.Extensions.Localization
@using Shopularity.Localization
@using Shopularity.Public.Components.Basket
@using Shopularity.Public.Pages.Shared.Components.Basket.BasketItem
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Button
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Grid
@using Volo.Abp.AspNetCore.Mvc.UI.Bundling.TagHelpers
@inject IStringLocalizer<ShopularityResource> L
@model BasketItemViewModel

@section styles {
    <abp-style-bundle name="@typeof(BasketItemViewComponent).FullName">
        <abp-style src="BasketItem.css"/>
    </abp-style-bundle>
}

<abp-row style="padding: 30px; display: flex; align-items: center;" abp-border="Secondary" class="basket-item">
    <abp-column size="_6">
        <img src="/api/catalog/public/products/image/@(Model.Item.Id)" style="width: 80px; height: auto; margin-right: 15px; border-radius: 4px;" alt="@Model.Item.Name"/>
    </abp-column>
    <abp-column size="_6" style="position: relative;">
        <abp-button button-type="Outline_Warning"
                    icon="trash"
                    class="remove-from-basket"
                    style="position: absolute; top: 0; right: 0;">
        </abp-button>

        <div style="font-weight: bold; padding-right: 30px;">@Model.Item.Name</div>
        <div style="color: green;">@L["Price"]: $@Model.Item.Price</div>
        <div class="amount-control d-flex align-items-center" data-product-id="@Model.Item.Id">
            <abp-button button-type="Outline_Secondary"
                        size="Small"
                        disabled="@(Model.Item.Amount == 1)"
                        class="amount-minus">
                âˆ’
            </abp-button>
            <span class="amount-value mx-2">@Model.Item.Amount</span>
            <abp-button button-type="Outline_Secondary"
                        size="Small"
                        class="amount-plus">
                +
            </abp-button>
        </div>
    </abp-column>

</abp-row>