@using Microsoft.Extensions.Localization
@using Shopularity.Localization
@using Shopularity.Public.Pages.Shared.Components.ProductList.ProductItem
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Grid
@inject IStringLocalizer<ShopularityResource> L
@model Shopularity.Public.Components.ProductList.ProductListViewModel

@if (Model.Items.Count > 0)
{
    <abp-row>
        @foreach (var item in Model.Items)
        {
            <abp-column size="_4" class="d-flex mb-2">
                    @await Component.InvokeAsync(typeof(ProductItemViewComponent), new
                    {
                        model = new ProductItemViewModel(item)
                    })
            </abp-column>
        }
    </abp-row>
}